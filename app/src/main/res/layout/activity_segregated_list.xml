<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SegregatedListActivity">


    <TableLayout
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#FFF">

            <ImageButton
                android:id="@+id/all_image_button"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:adjustViewBounds="true"
                android:background="@color/buttonColor"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/image_square_all" />

            <ImageButton
                android:id="@+id/done_image_button"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:adjustViewBounds="true"
                android:background="@color/buttonColor"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/image_square_done" />


            <ImageButton
                android:id="@+id/undone_image_button"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:adjustViewBounds="true"
                android:background="@color/buttonColor"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/image_square_undone" />

            <ImageButton
                android:id="@+id/past_image_button"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:adjustViewBounds="true"
                android:background="@color/buttonColor"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/image_square_late" />

            <ImageButton
                android:id="@+id/future_image_button"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:adjustViewBounds="true"
                android:background="@color/buttonColor"
                android:padding="@dimen/padding"
                android:scaleType="centerInside"
                android:src="@drawable/image_square_future" />
        </TableRow>
    </TableLayout>
    <ImageButton
        android:id="@+id/filter_button"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:layout_marginStart="36dp"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableRow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Start date:"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/filter_button"
        app:layout_constraintTop_toBottomOf="@id/tableRow" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:text="End date:"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/filter_button"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:text="Content:"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/filter_button"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <TextView
        android:id="@+id/text_lower_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="Lower"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/tableRow" />

    <TextView
        android:id="@+id/text_end_lower_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="Lower"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView" />
    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="none"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text=" - "
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/text_lower_start_date"
        app:layout_constraintTop_toBottomOf="@id/tableRow" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text=" - "
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/text_lower_start_date"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/text_upper_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="Upper"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/tableRow" />

    <TextView
        android:id="@+id/text_upper_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="Upper"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/textView" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:fadeScrollbars="false"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSegregated"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/no_rows_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No rows found"
        android:textSize="50sp"
        android:textColor="@color/selectedButtonColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageMute2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_rows_info"
        app:srcCompat="@drawable/mute"
        app:tint="@color/selectedButtonColor"
        />



</androidx.constraintlayout.widget.ConstraintLayout>